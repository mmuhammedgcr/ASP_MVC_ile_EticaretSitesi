@model IEnumerable<E_ticaret.MvcWebUi.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
    <div class="container mt-4 ">

        <h2>Kategori Listesi</h2>
        <hr />
        <p>
            @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-primary" }) 
        </p>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cargo)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                <img src="~/Upload/@item.Image" width="70px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td style="width:170px;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:170px;">
                @if (item.Description.Length > 50)
                {
                    <label>@item.Description.Substring(0,50)...</label>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="width:30px;">
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td style="width:20px;">
                @if (item.IsApproved==true)
                {
                <label class="text-danger">
                    <i class="fas fa-check"></i>
                </label>
                }
                else
                {
                 <label>
                    <i class="fas fa-times"></i>
                 </label>
                }

            </td>
            <td style="width:20px;">
                @if (item.Cargo == true)
                {
                    <label class="text-primary">
                        <i class="fas fa-check"></i>
                    </label>
                }
                else
                {
                    <label>
                        <i class="fas fa-times"></i>
                    </label>
                }
            </td>

            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" }) 
               
            </td>
        </tr>
            }

        </table>
    </div>