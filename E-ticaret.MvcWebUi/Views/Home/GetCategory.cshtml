@model IEnumerable<E_ticaret.MvcWebUi.Entity.Category>


@{ 
    var secili = Url.RequestContext.RouteData.Values["id"];
}


    <ul class="list-group">
        <h4 class="text-center text-danger">KATEGORİLER</h4>


        <a class="list-group-item " href="/Home/List"> <i class="fa fa-angle-double-right"></i>Tüm Kategoriler</a>

        @foreach (var item in Model)
        {
            if (secili != null)
            {
                if (item.Id == int.Parse(secili.ToString()))
                {
                    <a class="list-group-item active" href="/Home/List/@item.Id"> <i class="fa fa-angle-double-right"></i> @item.Name</a>

                }
                else
                {
                    <a class="list-group-item" href="/Home/List/@item.Id"> <i class="fa fa-angle-double-right"></i> @item.Name</a>

                }

            }
            else
            {
                <a class="list-group-item" href="/Home/List/@item.Id"> <i class="fa fa-angle-double-right"></i> @item.Name</a>

            }


        }


    </ul>
       
  
