@model E_ticaret.MvcWebUi.Models.ShippingDetails

@{
    ViewBag.Title = "CheckOut";
}
<style>
    .validation-summary-errors{
        color:red;
        font-weight:bold;
}
    .input-validation-error{
        border:1px solid red;
        background-color:navajowhite;
    }
</style>


<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgilerinizi doldurunuz...</p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Ad Soyad:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control " })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Adres Başılığı: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AdresBaslik, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Adres: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Şehir: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">İlçe: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Ilce, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Posta Kodu: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostaKKodu, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2">Telefon: </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-2"></label>
                    <div class="col-sm-6">
                        <input type="submit" class="btn btn-success" />
                    </div>
                </div>


            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>